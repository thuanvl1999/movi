{% extends "./base.html.twig" %}

{% block body %}
    <div class="sm:w-3/5 w-4/5 mx-auto">
        <h1 class="pt-20 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
            {{ actor.name }}
        </h1>

        <div class="py-10 text-center">
            <div class="inline-block sm:pt-1">
                 <h2 class="font-bold">
                    {{ actor.birth }}
                </h2>

                <h3 class="font-bold">
                    Created by: Code With me
                </h3>

                <p class="text-sm text-gray-600">
                    28-01-2022 4 min. read
                </p>
            </div>
        </div>

        <img
            src="{{ actor.imagePath }}"
            class="rounded-xl w-full shadow-xl"
            alt="Icon of Code With me"
        />

        <p class="text-xl py-6">
            {{ actor.description }}
        </p>
   <h4 class="pt-20 sm:text-5xl md:text-7xl text-4xl font-bold text-center">
            Movie
        </h4>
       {% for movie in actor.movies %}
                    <div class="xl:w-1/3 md:w-1/2 p-4 m-auto">
                        <a href="/movie/{{ movie.id }}">
                            <div class="bg-white p-6 rounded-lg">
                                <img class="lg:h-60 xl:h-56 md:h-64 sm:h-72 xs:h-72 h-72  rounded w-full object-cover object-center mb-6" src="{{ movie.imagePath }}">
                                <h3 class="tracking-widest text-indigo-500 text-lg font-medium title-font">{{ movie.title }}</h3>
                                <h2 class="text-lg text-gray-900 font-medium title-font mb-4">Description</h2>
                                <p class="leading-relaxed text-base  truncate ...">{{ movie.description }}</p>
                            </div>
                        </a>
                    </div>


                {% endfor %}
        <a 
            href="/actor/edit/{{ actor.id }}"
            class="bg-green-500 font-bold py-2 px-4 rounded transition-all hover:bg-green-300">
            Edit Actor
        </a>

        <a 
            href="/actor/delete/{{ actor.id }}"
            onclick="return confirm('Are you sure you want to delete that?');"
            class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">
            Delete Actor
        </a>
    </div>
{% endblock %}
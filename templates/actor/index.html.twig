{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Actor Review ({{ actor|length }})
            </h1>

            <span class="font-light text-gray-500 italic">
                Created by Code With me
            </span>
        </div>
    </div>

    {% if app.user %}
        <div class="mx-auto w-4/5 my-8">
            <a 
                href="/actor/create" 
                class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                Create New Actor
            </a>
        </div>
    {% endif %}
    
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for actor in actor %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ actor.imagePath }}"
                    alt=""
                    class="shadow-xl rounded-md"
                />

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ actor.name }}
                </h2>
                <h3 class="text-gray-700 font-bold text-3xl py-2">
                    {{ actor.birth }}
                </h3>

                <span class="text-gray-500">
                    By <span class="italic text-sm text-gray-800">Code With me | 28.01.2022
                </span>

                <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                    {{ actor.description }}
                </p>

                <a href="/actor/{{ actor.id }}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">
                    Keep Reading
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}